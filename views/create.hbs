<form action="/newStores" method="post">
    <div class="box">
        <div class="input__wrapper">
            <input id="password" type="password" name="password" placeholder="Your Password"
                title="Minimum 6 characters at least 1 Alphabet and 1 Number"
                pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{6,}$" required class="input__field">
            <label for="password" class="input__label">
                Password
            </label>
            <img alt="Eye Icon" title="Eye Icon" src="assets/eye.svg" class="input__icon">
        </div>
    </div>
    <div>
        <label for="name" style="display: inline;">請新增餐廳名稱</label>
        <input type="text" placeholder="edit --name-- here" name="name" required style="display: inline; " id="name">
    </div>
    <div>
        <label for="name_en" style="display: inline;">請新增餐廳英文名稱，只能輸入英文</label>
        <input type="text" placeholder="edit --name_en-- here" name="name_en" required style="display: inline;"
            id="name_en">
    </div>
    <div>
        <label for="category" style="display: inline;">請新增餐廳分類</label>
        <input type="text" placeholder="edit --category-- here" name="category" required style="display: inline;"
            id="category">
    </div>
    <div>
        <label for="image" style="display: inline;">請新增餐廳圖片</label>
        <input type="text" placeholder="edit --image-- here" name="image" required style="display: inline;" id="image">
    </div>
    <div>
        <label for="location" style="display: inline;">請新增餐廳地址</label>
        <input type="text" placeholder="edit --location-- here" name="location" required style="display: inline;"
            id="location">
    </div>
    <div>
        <label for="phone" style="display: inline;">請新增餐廳電話，只能輸入數字</label>
        <input type="text" placeholder="edit --phone-- here" name="phone" required style="display: inline;" id="phone" pattern="[0-9]*">
    </div>
    <div>
        <label for="google_map" style="display: inline;">請新增餐廳google_map連結</label>
        <input type="text" placeholder="edit --google_map-- here" name="google_map" required style="display: inline;"
            id="google_map">
    </div> 
    <div class="createDiv">
        <label for="rating" style="display: inline;">請新增餐廳評分，只能輸入0-5並允許到小數點第一位</label>
        <input type="text" placeholder="edit --rating-- here" name="rating" required style="display: inline;" id="rating"
            pattern="[0-5](\.[0-9])?">
    </div>   
    <div class="createDiv">
        <label for="description" style="display: inline;">請新增餐廳簡述</label>
        <input type="text" placeholder="edit --description-- here" name="description" required style="display: inline;"id="description">
    </div>
    <button type="submit"> Create </button>
</form>
<a href="/Stores">back to homepage</a>

