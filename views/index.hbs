<div class="container search-bar">
  <div class="search-bar-outer" style="display: flex;">
    <h4 class="mb-2">尋找餐廳：</h4>
    <div class="search-bar-inner" style="display: inline">
      <form action="/Stores/search" method="get">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div class="search-bar-inner" style="display: inline; margin-left:auto">
      <button class="btn btn-major">
        <a class="navbar-brand" href="/Stores/create" style="color:aliceblue">
          <i class="fa-solid fa-utensils"></i>
          新增餐廳
        </a>
      </button>
    </div>
  </div>
</div>


